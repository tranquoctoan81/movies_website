<div id="register-container">
    <div class="wrapper">
        <h1>
            Vui lòng điền thông tin của bạn vào biểu mẫu bên dưới để tiếp tục.
        </h1>
        <form action="/login-handle" method="POST">
            <input type="text" required name="username" id="name" placeholder="Tên tài khoản">
            <input type="password" required name="password" id="name" placeholder="Mật khẩu">
            <div class="handle-form-login">
                <button type="submit">Đăng nhập</button>
                <a class="forgot_password" href="/login/forgot-password-handle">Quên mật khẩu?</a>
            </div>
        </form>
        {{#if message}}
        <h1>{{message}}</h1>
        {{/if}}
    </div>
</div>
<style>
    #footer {
        display: none;
    }
</style>