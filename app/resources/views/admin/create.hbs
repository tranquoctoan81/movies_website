    <a href="/admin/movie-manager/">back</a>
    <form method="POST" action="/admin/handle-form-action/create">
        <div style="display:flex;justify-content:center" class="title">
            <h2>Thêm mới movie</h2>
        </div>
        <div class="item">
            <label for="name">Name</label>
            <input value="" name="name" type="text" id="name">
        </div>
        <div class="item">
            <label for="description">Description</label>
            <input value="" name="description" type="text" id="description">
        </div>
        <div class="item">
            <label for="movie">Movie</label>
            <input value="" name="movie" type="text" id="movie">
        </div>
        <div class="item">
            <label for="year">Year</label>
            <input value="" name="year" type="text" id="year">
        </div>
        <div class="item">
            <label for="image">Image</label>
            <input value="" name="image" type="text" id="image">
        </div>
        <div class="item">
            <label for="trailer">Trailer</label>
            <input value="" name="trailer" type="text" id="trailer">
        </div>
        <div class="item">
