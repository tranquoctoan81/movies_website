<div id="update-container">
    {{#each data}}
    <form method="POST" action="/admin/{{this.slug}}?_method=PUT">
        <div style="display:flex;justify-content:center" class="title">
            <h2>Cập nhật movie</h2>
        </div>
        <div class="item">
            <label for="name">Name</label>
            <input value="{{this.name}}" name="name" type="text" id="name">
        </div>
        <div class="item">
            <label for="description">Description</label>
            <input value="{{this.description}}" name="description" type="text" id="description">
        </div>
        <div class="item">
            <label for="movie">Movie</label>
            <input value="{{this.linkVideo}}" name="movie" type="text" id="movie">
        </div>
        <div class="item">
            <label for="year">Year</label>
            <input value="{{this.year}}" name="year" type="text" id="year">
        </div>
        <div class="item">
            <label for="image">Image</label>
            <input value="{{this.linkImage}}" name="image" type="text" id="image">
        </div>
        <div class="item">
            <label for="trailer">Trailer</label>
            <input value="{{this.idTrailer}}" name="trailer" type="text" id="trailer">
        </div>
        <div class="item">
            <label for="slug">Slug</label>
            <input value="{{this.slug}}" name="slug" type="text" id="slug">
        </div>
        <div id="btnSubmit" class="item"><button type="submit">Cập nhật</button></div>
    </form>
    {{/each}}
</div>
<style>
    #footer {
        display: none;
    }

    #update-container {
        width: 100%;
        height: 93vh;
    }

    #update-container>form {
        width: 1000px;
        height: 100%;
        margin: 0 auto;
    }

    h2 {
        font-size: 3rem;
        font-weight: 600;
        padding: 3rem;
        color: #d3531a;
    }

    .item {
        color: #d3531a;
        padding: 0 3rem 1rem;
        display: flex;
        flex-direction: column;
    }

    button {
        width: 100%;
        padding: 1rem;
        margin-top: 2rem;
        font-size: 2rem;
        font-weight: 600;
        border-radius: 1rem;
        background-color: #d3531a;
        color: rgb(199, 199, 199);
    }

    label {
        font-size: 2rem;
        font-weight: 400;
    }

    input {
        padding: 1rem;
        font-size: 1.5rem;
        border-radius: 1rem;
        background-color: rgb(214, 209, 209);
    }
</style>
